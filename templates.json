{
  "version": "2",
  "templates": [
    {
      "type": 3,
      "title": "Traefik",
      "description": "Traefik Ingress Controller",
      "categories": ["Ingress"],
      "platform": "linux",
      "administrator-only": true,
      "repository": {
        "url": "https://github.com/edutcm/edustack",
        "stackfile": "stacks/traefik/docker-compose.yml"
      },
      "env": [
        {
          "name": "LE_EMAIL",
          "label": "LetsEncrypt support email",
          "default": "user@example.com",
          "required": true
        },
        {
          "name": "HOSTNAME",
          "label": "Hostname of service",
          "default": "traefik.local",
          "required": true
        }
      ],
      "volumes": ["/letsencrypt"]
    },
    {
      "type": 3,
      "title": "Moodle 4+ with MariaDB and Redis",
      "description": "A Moodle 4+ stack optimized for tcmi.edu",
      "categories": ["LMS"],
      "platform": "linux",
      "repository": {
        "url": "https://github.com/edutcm/edustack",
        "stackfile": "stacks/moodle/docker-compose.yml"
      },
      "env": [
        {
          "name": "MYSQL_ROOT_DB_PASSWORD",
          "label": "Database root password"
        },
        {
          "name": "MYSQL_DB_PASSWORD",
          "label": "Database password"
        },
        {
          "name": "HOSTNAME",
          "label": "Hostname of service"
        },
        {
          "name": "TRAEFIK_SERVICE",
          "label": "Traefik service name to route to"
        }
      ],
      "volumes": ["/var/www/html", "/var/moodle"]
    },
